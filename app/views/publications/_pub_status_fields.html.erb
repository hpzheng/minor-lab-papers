<fieldset>
  <div class="field">
    <%= f.label :select_status %>
    <%= f.collection_select(:status_id, Status.all, :id, :status_str, {:include_blank => '--'}) %><%= f.collection_select(:person_responsible_id, Author.all, :id, :auth_name, {:include_blank => '--'}) %>
  </div>
  <div class="field">
    <%= f.label :due_date %>
    <%= f.text_field :due_date %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, :size => 75 %>
  </div>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", "#", :class => 'remove_fields' %>
</fieldset>

