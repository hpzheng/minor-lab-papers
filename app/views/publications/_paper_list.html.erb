<table class="tic_tac_toe">
  <th>Topic</th>
  <th>Authors</th>
  <th>Journal</th>
  <th>Status(es)</th>
  <th>Referee(s)</th>
  <th>Deadline</th>
  <% @publications.each do |paper| %>
    <% if user_signed_in? %>
      <tr onclick="location.href='<%= edit_publication_path(paper) %>'">
    <% else %>
      <tr onclick="location.href='<%= publication_path(paper) %>'">
    <% end %>
      <td>
        <%= paper.topic %>
      </td>
      <td>
        <%= paper.author_list %>
      </td>
      <td>
        <% if paper.target_journal.nil? %>
          &nbsp;--
        <% else %>
          <%= paper.target_journal.journal_abbr %>
        <% end %>
      </td>
      <td>
        <table >
          <% paper.pub_statuses.each do |pub_status| %>
            <tr><td bgcolor="<%= pub_status.status_color %>"><%= link_to pub_status.status_string, publication_pub_status_jcns_path(paper) %></td></tr>
          <% end %>
        </table>
      </td>
      <td>
        <ul>
          <% paper.referees.each do |ref| %>
            <li>
              <%= ref.ref_name %>
            </li>
          <% end %>
        </ul>
      </td>

      <td>
         <% if paper.deadline.nil? %>
          &nbsp;--
        <% else %>
          <%= paper.deadline %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
