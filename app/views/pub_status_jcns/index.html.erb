<h1>Status(es) for </h1>

<table class="tic_tac_toe">
  <tr>
    <th>Status</th>
    <th>Person Responsible</th>
    <th>Description</th>
    <th>Due Date</th>
    <th>Edit</th>
  </tr>

<% @statuses.each do |s| %>
  <tr>
    <td><%= s.status.status_str %></td>
    <td><%= s.person_responsible.auth_name unless s.person_responsible.nil? %></td>
    <td><%= s.descr %></td>
    <td><%= s.due_date unless s.due_date.nil? %></td>
    <td><%= link_to 'Edit', edit_publication_pub_status_jcn_path(@publication.id, s.id) %></td>
  </tr>
<% end %>
</table>

<br />

