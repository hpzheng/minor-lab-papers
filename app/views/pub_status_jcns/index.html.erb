<h1>Status(es) for "<%= @title %>"</h1>

<table class="tic_tac_toe">
  <tr>
    <th>Status</th>
    <th>Person Responsible</th>
    <th>Description</th>
    <th>Due Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statuses.each do |s| %>
  <tr>
    <td><%= s.status.status_str %></td>
    <td><%= s.person_responsible.auth_name unless s.person_responsible.nil? %></td>
    <td><%= s.descr %></td>
    <td><%= s.due_date unless s.due_date.nil? %></td>
    <td><%= link_to 'Show', publication_path %></td>
    <td><%= link_to 'Edit', publication_path %></td>
    <td><%= link_to 'Destroy', publication_path, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

