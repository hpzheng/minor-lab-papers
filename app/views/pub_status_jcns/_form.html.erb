<%= form_for([@publication,@pub_status]) do |f| %>
  <% if @pub_status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pub_status.errors.count, "error") %> 
          prohibited this status from being saved:</h2>
      <p>There were problems with the following fields:</p>
      <ul>
      <% @pub_status.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="formsection">
  <table><tr><td>
      <%= f.label :status_id %>
      <%= collection_select(:pub_status_jcn, :status_id, Status.all, :id, :status_str, {:include_blank => '--'}) %>
  </td><td>
      <%= f.label :person_responsible %>
      <%= collection_select(:pub_status_jcn, :person_responsible_id, Author.all, :id, :auth_name, {:include_blank => '--'}) %>
  </td><td>
      <%= f.label :due_date %>
      <%= f.text_field :due_date %>
  </td></tr></table>
    </div>
  <div class="formsection">
    <%= f.label :description %>
    <%= f.text_field :description, :size => 100  %>
  </div>
  <div class="actions">
    <p><%= f.submit "Update" %></p>
  </div>
<% end %>

